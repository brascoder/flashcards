<div class="row"><%= link_to "New Deck", new_deck_path, class: "btn btn-primary" %></div>
<br>
<% @decks.each do |deck| %>
  <div class="row">
    <div class="col-md-2">
      <%= link_to deck.name, deck %>
    </div>
    <div class="col-md-1">
      <%= link_to "Edit", edit_deck_path(deck) %>
    </div>
    <div class="col-md-1">
      <%= link_to "Delete", deck, method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  </div>
<% end %>
