<%= form_for(:session, url: session_path) do |form| %>
  <div> 

    <div class="row">
      <div class="col-md-1">
        <%= form.label :email %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <%= form.text_field :email, class: "form-control" %>
      </div>
    </div>

    <br>

    <div class="row">
      <div class="col-md-1">
        <%= form.label :password %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <%= form.text_field :password, class: "form-control" %>
      </div>
    </div>

  </div>
  <br>
  <%= form.submit "Sign in", class: "btn btn-primary" %>
<% end %>
