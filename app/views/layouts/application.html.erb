<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Flashcard</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-inverse">
    <div class="container-fluid">

      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#fc-navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Flashcard", root_path, class: "navbar-brand" %>
      </div>

      <div class="collapse navbar-collapse" id="fc-navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <% if signed_in? %>
            <li>
              <p class="navbar-text">Welcome 
                <%= link_to current_user.email, current_user %>
              </p>
            </li>
            <li><%= link_to "Sign out", session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Sign up", new_user_path %></li>
            <li><%= link_to "Sign in", new_session_path %></li>
          <% end %>
        </ul>
      </div>

    </div>
  </nav>

  <% flash.each do |type, message| %>
    <div class="alert alert-warning">
      <%= message %>
    </div>
  <% end %>

  <div class="container">

    <%= yield %>

  </div>
</body>
</html>
